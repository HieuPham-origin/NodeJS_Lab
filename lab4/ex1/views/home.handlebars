<div class="container mt-4">
    {{#if user}}
        <h1>List of Users</h1>
        <a href="/add" class="btn btn-primary mb-3">Thêm sản phẩm</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{gender}}</td>
                        <td>{{status}}</td>
                        <td>
                            <a href="/edit/{{id}}" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
                    <a class="page-link" href="/?page={{subtract currentPage 1}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="/?page=1">1</a></li>
                <li class="page-item"><a class="page-link" href="/?page=2">2</a></li>
                <li class="page-item"><a class="page-link" href="/?page=3">3</a></li>
                <li class="page-item {{#if (eq currentPage 3)}}disabled{{/if}}">
                    <a class="page-link" href="/?page={{add currentPage 1}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    {{else}}
        <p>Please <a href="/login">login</a> to see the list of users.</p>
    {{/if}}
</div>
